#polifileModule .header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 40px;
  background-color: #c5a973;
}
#polifileModule .header .userImg {
  width: 100px;
  height: 100px;
  margin-right: 20px;
  border-radius: 50px;
  background: #fff;
}
#polifileModule .header .userInfo ._p {
  height: 50px;
  line-height: 50px;
}
#polifileModule .content ._h2 {
  line-height: 100px;
  margin-left: 5%;
}
#polifileModule .content .line {
  width: 90%;
  height: 2px;
  background: #eee;
  margin: 0 auto;
}
#polifileModule .content .myAssetList {
  width: 90%;
  margin: 20px auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
#polifileModule .content .myAssetList .assetItem {
  width: 25%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  color: #333;
  line-height: 40px;
}
#polifileModule .content .personalList {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  border-top: 1px solid #eee;
}
#polifileModule .content .personalList .navItem {
  width: 33.3333%;
  text-align: center;
  border-bottom: 1px solid #eee;
  border-right: 1px solid #eee;
  box-sizing: border-box;
  padding: 30px 0;
}
#polifileModule .content .personalList .navItem:nth-child(3n) {
  border-right: none;
}
#polifileModule .content .personalList .navItem .iconfont {
  font-size: 30px;
}
#polifileModule .content .personalList .navItem ._p {
  line-height: 40px;
}
#polifileModule .content .logout {
  border-top: 40px solid #eee;
  border-bottom: 40px solid #eee;
  height: 60px;
  margin-bottom: 88px;
  text-align: center;
  line-height: 60px;
}

