.header-search-login {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 30px;
  padding: 10px 0;
}
.header-search-login .logo {
  width: 70px;
  height: 20px;
  margin: 5px 15px;
}
.header-search-login .searchInput {
  height: 30px;
  width: 200px;
  background: #ededed;
  position: relative;
  border-radius: 5px;
}
.header-search-login .searchInput .iconfont {
  font-size: 15px;
  position: absolute;
  left: 20px;
  top: 25%;
}
.header-search-login .searchInput input {
  border-radius: 10px;
  height: 30px;
  width: 150px;
  margin-left: 40px;
}
.header-search-login .searchInput .placeholder {
  font-size: 12px;
  color: #666;
}
.header-search-login button {
  width: 50px;
  height: 28px;
  color: #fff;
  line-height: 24px;
  text-align: center;
  font-size: 10px;
  background-color: #b4282d;
  margin-top: 2px;
}

